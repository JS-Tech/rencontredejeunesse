<% content_for :id, "users-new"%>

<div class="content-wrap">
  <div class="signup standard-form-row">
    <h1>Créer un compte RJ Connect</h1>

    <%= form_for @user, url: users_path do |f| %>

      <%= render "error_messages", object: f.object %>

      <%= render "users/fields/information", f: f %>

      <div class="row">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="row">
        <span></span>
        <%= f.submit "Créer mon compte", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
