<% content_for :id, "orders-rj-confirmation" %>

<div class="content-wrap">
  <%= render layout: "orders/confirmation" do %>

    <!-- Product information -->
    <div class="product-information standard-form-row">
      <div class="row">
        <span></span>
        <h3>Mes entrées</h3>
      </div>

      <div class="row">
        <p><strong>Nombre d'entrées:</strong></p>
        <p><%= @order.product.entries %> (dont <%= @order.product.man_lodging %> lits gars et <%= @order.product.woman_lodging %> lits filles)</p>
      </div>
      <% @order.product.participants.each do |participant| %>
        <div class="participant">
          <div class="row tight">
            <span>Nom</span>
            <p>
              <%= t("participants/rj.genders.#{participant.gender}") %>
              <%= participant.firstname %> <%= participant.lastname %>
            </p>
          </div>
          <div class="row tight">
            <p>Age</p>
            <p><%= l participant.birthday if participant.birthday %></p>
          </div>
          <div class="row tight">
            <span></span>
            <p><%= participant.lodging ? "Dors sur place" : "Ne dors PAS sur place" %></p>
          </div>
        </div>
      <% end %>

      <div class="row">
        <p><strong>Nom du groupe:</strong></p>
        <p><%= @order.product.group %></p>
      </div>

      <div class="row">
        <span></span>
        <button class="edit"><%= link_to " Modifier la commande", { action: "edit" } %></button>
      </div>
    </div>
  <% end %>
</div>

<%= render "layouts/headers/application" %>
