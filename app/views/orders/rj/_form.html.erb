<%= render layout: "orders/form" do |f| %>

  <%= f.fields_for :product do |product_f| %>

    <%= product_f.label :group %>
    <%= product_f.text_field :group %>

    <%= product_f.label :entries %>
    <%= product_f.number_field :entries, class: "amount-entries" %>

    <%= product_f.label :boy_beds %>
    <%= product_f.number_field :boy_beds, class: "amount-boybeds"  %>

    <%= product_f.label :girl_beds %>
    <%= product_f.number_field :girl_beds, class: "amount-girlbeds"  %>

  <% end %>

  <!-- Voluntering -->

  <%= fields_for @volunteer do |volunteer_f| %>

    <% VolunteerForm.sectors.each do |sector| %>

    <%= volunteer_f.label sector %>
    <%= volunteer_f.check_box sector %>

    <% end %>

    <%= volunteer_f.label :other %>
    <%= volunteer_f.text_field :other %>

    <%= volunteer_f.label :comment %>
    <%= volunteer_f.text_area :comment %>

  <% end %>

  <!-- -->

<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag "orders/rj" %>
<% end %>
