<% if @order.amount == 0 %>
  <%= render "orders/payments/free" %>
<% elsif @order.main_payment.invoice? %>
  <%= render "orders/payments/invoice" %>
<% elsif @order.main_payment.postfinance? %>
  <%= render "orders/payments/postfinance", payment: @order.main_payment, user: @order.user %>
<% end %>
