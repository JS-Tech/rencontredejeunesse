<% content_for :id, "orders-users-new" %>

<div class="content-wrap">
  <div class="signin standard-form-row">

    <h2>Se connecter</h2>

    <%= form_for :session, url: signin_orders_users_path(product: params[:product]) do |f| %>

      <div class="row">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email" %>
      </div>
      <div class="row">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Mot de passe" %>
      </div>
      <div class="row">
        <span></span>
        <div><%= f.button class: "main-button" %></div>
      </div>

    <% end %>
  </div>

  <div class="signup standard-form-row">
    <h2>S'inscrire</h2>

    <%= form_for @user, url: orders_users_path(product: params[:product]) do |f| %>

      <%= render "error_messages", object: f.object %>

      <%= render "users/fields/information", f: f %>

      <div class="row">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="row">
        <span></span>
        <div><%= f.submit "CrÃ©er mon compte", class: "button main-button" %></div>
      </div>

    <% end %>
  </div>
</div>

<%= render "layouts/headers/application" %>