<div id="light-form">

  <div class="row">
    <div>Nom du groupe</div>
    <div><%= @order.product.group %></div>
  </div>

  <div class="row">
    <div>Nombre d'entrées</div>
    <div><%= @order.product.entries %> (dont <%= @order.product.man_lodging %> places gars et <%= @order.product.woman_lodging %> places filles)</div>
  </div>

  <div class="row">
    <h4>Participants</h4>
  </div>

  <% @order.product.participants.each do |participant| %>
    <div class="participant">
      <div class="row tight">
        <div>Nom</div>
        <div>
          <%= t("participants/rj.genders.#{participant.gender}") %>
          <%= participant.firstname %> <%= participant.lastname %>
        </div>
      </div>
      <div class="row tight">
        <div>Age</div>
        <div><%= l participant.birthday if participant.birthday %></div>
      </div>
      <div class="row tight">
        <span>Hébergement</span>
        <div><%= participant.lodging ? "Dors sur place" : "Ne dors PAS sur place" %></div>
      </div>
    </div>
  <% end %>
</div>
