<section class="settings fade-in app-container">

  <div class="header">
    <%= link_to image_tag("connect/layout/back.svg", class: "back"), connect_root_path, remote: true %>
    <h1>Param√®tres</h1>
  </div>

  <div id="light-form">

	<%= form_for [:admin, User.last] do |f| %>

		<%= render 'error_messages', object: f.object %>

    <div class="entry">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :phone %>
      <%= f.text_field :phone, required: true, placeholder: true %>
    </div>
    
    <div class="entry">
      <%= f.label :address %>
      <%= f.text_field :address, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :npa %>
      <%= f.text_field :npa, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :city %>
      <%= f.text_field :city, required: true, placeholder: true %>
    </div>

    <div class="entry">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="entry">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="entry">
      <%= f.label :gender %>
      <div class="select">
        <%= f.select :gender, options_for_enum(f.object, :gender) %>
      </div>
    </div>
    <div class="entry">
      <%= f.label :birthday %>
      <div class="select selects">
        <%= f.date_select :birthday, :start_year=>1900, required: true %>
      </div>
    </div>
    <div class="entry">
      <%= f.label :country %>
      <div class="country select">
        <%= f.country_select :country, priority_countries: ["CH", "FR", "BE"], required: true %>
      </div>
    </div>

    <div class="submit">
		  <%= f.submit nil, class: "button" %>
    </div>

	<% end %>

</div>


</section>