<% if @current_partial == "home" %>
  $("section.app-container").addClass("swipe-right");

  setTimeout(function(){
      $("#render-wrap").html("<%= j render @current_partial %>");
  }, 500);
<% else %>
  $("section.home").addClass("swipe-left");

  setTimeout(function(){
      $("#render-wrap").html("<%= j render @current_partial %>");
  }, 500);
<% end %>