<!DOCTYPE html>
<html>
  <head>
    <title>Rencontre de jeunesse RJ</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :javascript %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= render 'layouts/favicon' %>
  </head>

  <body>

    <div id="application-flash">
      <%= render 'layouts/flash' %>
    </div>

    <%= render 'layouts/headers/logo_burger' %>

    <div id="container" class="<%= yield :id %>">

      <%= yield %>

    </div>
    <%= content_for?(:footer) ? render(yield(:footer)) : render("layouts/footers/application") %>
    <%#= javascript_include_tag "countdown", 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag "standalone/rj/flash/countdown.js", 'data-turbolinks-track': 'reload' %>
  </body>
</html>
