<!DOCTYPE html>
<html>
  <head>
    <title>Rencontre de jeunesse RJ</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :javascript %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= render 'layouts/favicon' %>
  </head>

  <body class="body-<%= yield :id %>">

    <div id="application-flash">
      <%= render 'layouts/flash' %>
    </div>

    <%= render 'layouts/headers/logo_burger' %>

    <div id="container" class="<%= yield :id %>">

      <%= yield %>

    </div>

    <%= render "layouts/footers/application" %>

  </body>
</html>
