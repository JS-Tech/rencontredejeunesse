<% content_for :id, "admin-checkin" %>

<%= link_to "Retour Admin", "/admin" %>

<div class="content-wrap">

  <h1>Contrôle de commande</h1>

  <%= form_tag admin_checkin_index_path, id: "checkin-form" do %>

    <%= label_tag :order_id, "Entrez le numéro de commande" %>
    <%= text_field_tag :order_id, nil, maxlength: "14", autofocus: true %>

    <%= submit_tag "Afficher", class: "button" %>

  <% end %>
</div>

<%= content_for :javascript do %>
  <%= javascript_include_tag "orders/checkin", 'data-turbolinks-track': 'reload' %>
<% end %>
